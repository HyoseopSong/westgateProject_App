                        <TapGestureRecognizer
                            Tapped="OnTapped"
                            NumberOfTapsRequired="1"/>
                    </Label.GestureRecognizers>
                </Label>
            </AbsoluteLayout>

            <AbsoluteLayout>
                <Label Text="1F" FontAttributes="Bold" FontSize="100" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="LightYellow"
