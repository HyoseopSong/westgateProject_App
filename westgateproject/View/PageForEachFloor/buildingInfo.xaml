                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnTapped"
                            NumberOfTapsRequired="1"/>
                    </Label.GestureRecognizers>
                </Label>
            </AbsoluteLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>