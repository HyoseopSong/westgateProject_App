<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="westgateproject.MainPage" Title="TableStorage" Icon="schedule.png">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
			iOS="20, 40, 20, 20"
			Android = "20, 20, 20, 20"/>
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand"
			Orientation="Vertical"
			Spacing="15">
			<Label x:Name="text" Text = "Enter a phoneword:" />
			<Button x:Name="ValuesGet" Text="Values Get!" Clicked="VGetClicked" />
			<Button x:Name="ValuesPost" Text="Values Post!" Clicked="VPostClicked" />
			<Button x:Name="SampleGet" Text="Sample Get!!" Clicked="SGetClicked" />
			<Button x:Name="SamplePost" Text="Sample Post!!" Clicked="SPostClicked" />
			<Button x:Name="erase" Text="Erase" Clicked="OnErase"/>
			<ActivityIndicator 
				HorizontalOptions="Center"
				VerticalOptions="Center"
				IsVisible="false"
				IsEnabled="true"
				x:Name = "syncIndicator"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
